# APP — local | dev | qa | stage | prod
APP_ENV=local
DEBUG=true

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Bedrock LLM
BEDROCK_MODEL_ID=us.anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_TEMPERATURE=0.1
BEDROCK_MAX_TOKENS=4096
BEDROCK_RETRIEVAL_TOP_K=5
BEDROCK_RETRIEVAL_MIN_SCORE=0.3

# DynamoDB — leave DYNAMODB_ENDPOINT empty for real AWS, set for local Docker
DYNAMODB_REGION=us-east-1
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_TABLE_CLIENTS=osha_clients
DYNAMODB_TABLE_AGENTS=osha_agents
DYNAMODB_TABLE_API_KEYS=osha_api_keys
DYNAMODB_TABLE_QUERY_LOGS=osha_query_logs
DYNAMODB_TABLE_SESSIONS=osha_sessions

# Session
SESSION_TTL_SECONDS=86400
SESSION_MAX_HISTORY=10

# Redis — rate limiting only
REDIS_URL=redis://localhost:6379
REDIS_RATE_LIMIT_REQUESTS=60
REDIS_RATE_LIMIT_WINDOW_SECONDS=60

# API
API_HOST=0.0.0.0
API_PORT=5000
API_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
ADMIN_API_KEY=your-strong-admin-key-here

# Data
DOCS_DIR=data/raw/osha_documents

# Logging — DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
